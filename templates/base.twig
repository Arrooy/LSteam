<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>LSteam - {% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    {% block head %}
    {% endblock %}
    <link rel="stylesheet" href="{{ full_url_for('home') }}../assets/css/styles.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link rel="icon" href="{{ full_url_for('home') }}../assets/img/logo.svg">

</head>
<body>
<header>
    <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="{{ home_href }}">
                <img src="{{ full_url_for('home') }}/../assets/img/logo_small.png">
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="{{ home_href }}">
                    Home
                </a>

                <a class="navbar-item" href="{{ store_href }}">
                    Store
                </a>
                {% if is_user_logged %}

                <a class="navbar-item" href="{{ wishlist_href }}">
                    Wishlist
                </a>

                <a class="navbar-item" href="{{ profile_href }}">
                    Profile
                </a>

                <a class="navbar-item" href="{{ friends_href }}">
                    Friends
                </a>
                <a class="navbar-item" href="{{ wallet_href }}">
                    Wallet
                </a>

                <a class="navbar-item" href="{{ myGames_href }}">
                    My Games
                </a>
                {% endif %}
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        {% if is_user_logged %}
                            <form action="{{ log_out_href }}" method="POST" accept-charset="utf-8">
                                <input class="button is-danger" type="submit" name="logout" value="Log out" />
                            </form>
                        {% else %}
                            <a class="button is-primary" href="{{ sign_up_href }}">
                                <strong>Sign up</strong>
                            </a>
                            <a class="button is-light" href="{{ log_in_href }}">
                                Log in
                            </a>
                        {% endif %}
                    </div>
                </div>
                {% if is_user_logged %}
                    <a href="{{ profile_href }}">
                        <figure class="image is-48x48 m-2">
                            <img class="is-rounded" src="{{ profilePic }}">
                        </figure>
                    </a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>
<main>
    <section class="hero is-fullheight-with-navbar">
        <div class="hero-body">
            <div class="container">
                {% block content %}{% endblock %}
            </div>
        </div>
    </section>
</main>
<footer class="footer">
    <div class="content has-text-centered">
        <p>
            <strong>LSteam</strong> by Adri√† Arroyo, Miquel Saula & Guillem Serra. The website code is hosted <a href="https://atlassian.salle.url.edu:7943/projects/PWI2021/repos/pw2_grupo_22/browse">here</a>.
        </p>
        <p>
            The website content is licensed <a href="http://creativecommons.org/licenses/by-nc-sa/4.0/">CC BY NC SA 4.0</a>.
        </p>
    </div>
</footer>
</body>
<script>
    {#    Script per a tancar les alertes de l'usauri#}
    document.addEventListener('DOMContentLoaded', () => {
        (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
            const $notification = $delete.parentNode;

            $delete.addEventListener('click', () => {
                $notification.parentNode.removeChild($notification);
            });
        });
    });
</script>
<script src="{{ full_url_for('home') }}../assets/scripts/code.js"></script>
</html>